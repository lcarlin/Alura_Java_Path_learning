public class TesteSalario {

    public static void main(String[] args) {

        boolean foiPromovido = true;
        int salario = 4000 ; 

        if(foiPromovido) {
            double salario = 4200.0;
        } else {
            double salario = 3800.0;
        }

        System.out.println(salario);
    }
}